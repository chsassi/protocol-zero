---
/**
 * Footer Component
 * Site footer with scramble text effect
 */
interface Props {
  text?: string;
}

const { text = 'Â© Protocol Zero - Est. 2026' } = Astro.props;
---

<footer class="footer">
  <div class="footer-inner">
    <p class="footer-text" data-text={text}></p>
  </div>
</footer>

<style>
  .footer {
    background: #000;
    color: var(--text);
    padding: 50px 24px 90px;
    text-align: center;
    border-top: 1px solid var(--border);
    width: 100%;
    flex-shrink: 0;
  }

  .footer-inner {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .footer-text {
    margin: 0;
    font-size: 0.95rem;
    letter-spacing: 1.5px;
    color: var(--muted);
    min-width: max-content;
    white-space: nowrap;
  }

  .footer-text::before {
    content: attr(data-text);
    visibility: hidden;
    display: block;
    height: 0;
    overflow: hidden;
  }
</style>
